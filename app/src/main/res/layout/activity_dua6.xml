<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Dua_6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="ہاتھ ملاتے وقت"
        android:textSize="35sp"
        android:gravity="center"
        android:fontFamily="@font/urdufont"
        android:background="#82BBF4"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textIsSelectable="true"
        android:fontFamily="@font/nabi_regular"
        android:background="#70B3F4"
        android:text="یَغْفِرُاللّٰہُ لَنَا وَلَکُمْ۔"
        android:textSize="30sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1632E8"
        android:padding="10dp"
        android:fontFamily="@font/b612"
        android:textIsSelectable="true"
        android:text="May Allah Almighty forgive us and you."
        android:textSize="25sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1632E8"
        android:fontFamily="@font/urdufont"
        android:padding="10dp"
        android:textIsSelectable="true"
        android:text="اللہ عزوجل تمہاری اور ہماری مغفرت فرمائے۔"
        android:textSize="25sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/handshake">

    </ImageView>




</LinearLayout>