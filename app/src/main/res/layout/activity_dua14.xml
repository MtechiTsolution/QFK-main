<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Dua_14">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="شکریہ کرتے وقت"
        android:textSize="35sp"
        android:gravity="center"
        android:fontFamily="@font/urdufont"
        android:background="#F68EB7"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textIsSelectable="true"
        android:fontFamily="@font/nabi_regular"
        android:background="#F68BB5"
        android:text="جَزَاکَ اللّہُ خَیْرًا"
        android:textSize="30sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#D10455"
        android:fontFamily="@font/b612"
        android:padding="10dp"
        android:textIsSelectable="true"
        android:text="May Allah Almighty give you good recompense (for doing a favour)."
        android:textSize="25sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#D10455"
        android:fontFamily="@font/urdufont"
        android:padding="10dp"
        android:textIsSelectable="true"
        android:text="اللہ عزوجل تجھے (احسان کرنے کی)جزاۓ خیر دے"
        android:textSize="25sp">
    </TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/thanks_dua">

    </ImageView>

</LinearLayout>