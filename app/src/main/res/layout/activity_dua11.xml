<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Dua_11">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="عیادت کرتے وقت"
        android:textSize="35sp"
        android:gravity="center"
        android:fontFamily="@font/urdufont"
        android:background="#F18E8E"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textIsSelectable="true"
        android:fontFamily="@font/nabi_regular"
        android:background="#EF8F8F"
        android:text="لَا بَأْسَ طَهُورٌ إِنْ شَآءَ اللّٰہُ"
        android:textSize="30sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F63131"
        android:fontFamily="@font/b612"
        android:padding="10dp"
        android:textIsSelectable="true"
        android:text="This is not a thing of harm In Sha Allah Azzawajal this illness purifies from sins."
        android:textSize="25sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F63131"
        android:fontFamily="@font/urdufont"
        android:paddingRight="10dp"
        android:textIsSelectable="true"
        android:text="کوئی حرج کی بات نہیں انشاء اللہ عزوجل یہ مرض گناہوں سے پاک کرنے والا ہے"
        android:textSize="25sp">
    </TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/patient">

    </ImageView>


</LinearLayout>