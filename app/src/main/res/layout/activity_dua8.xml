<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Dua_8">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="مسجد سے نکلنے کے وقت"
        android:textSize="35sp"
        android:gravity="center"
        android:fontFamily="@font/urdufont"
        android:background="#DAD0B6"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textIsSelectable="true"
        android:fontFamily="@font/nabi_regular"
        android:background="#CAC0A6"
        android:text="اَللّٰهُمَّ اِنِّيْ اَسْاَلُکَ مِنْ فَضْلِکَ وَرَحْمَتِکَ"
        android:textSize="30sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#686565"
        android:padding="10dp"
        android:fontFamily="@font/b612"
        android:textIsSelectable="true"
        android:text="Oh Allah! I ask you of your Favour."
        android:textSize="25sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#686565"
        android:fontFamily="@font/urdufont"
        android:padding="10dp"
        android:textIsSelectable="true"
        android:text="اے اللہ! میں تجھ سے تیرا فضل اور تیری رحمت مانگتا ہوں۔"
        android:textSize="25sp">
    </TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/exitmosque">

    </ImageView>




</LinearLayout>