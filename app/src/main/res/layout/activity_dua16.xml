<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Dua_16">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="وضو سے پہلے "
        android:textSize="35sp"
        android:gravity="center"
        android:fontFamily="@font/urdufont"
        android:background="#D89DF1"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:textIsSelectable="true"
        android:gravity="center"
        android:fontFamily="@font/nabi_regular"
        android:background="#D89DF1"
        android:text="بِسْمِ اللّٰہِ وَلْحَمْدُ لِلّٰہِ"
        android:textSize="30sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#AD19EC"
        android:padding="10dp"
        android:textIsSelectable="true"
        android:fontFamily="@font/b612"
        android:text="Allah Azzawajal in the name of the most affectionate, the merciful."
        android:textSize="25sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#AD19EC"
        android:fontFamily="@font/urdufont"
        android:padding="10dp"
        android:textIsSelectable="true"
        android:text="اللہ عزوجل کے نام سے شروع جو بڑا مہربان اور نہایت رحم والا ہے۔"
        android:textSize="25sp">
    </TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/wazu">
    </ImageView>
</LinearLayout>